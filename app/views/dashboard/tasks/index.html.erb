<p id="notice"><%= notice %></p>

 <ul class='breadcrumb'>
    <li><%= link_to 'Home',  dashboard_path %></li>
    <li><%= link_to 'Tasks', dashboard_tasks_path %></li>
 </ul>

<%= link_to 'New Dashboard Task', new_dashboard_task_path, 
class: 'btn btn-primary btn-lg top pull-right' %>

<h1><i class='glyphicon glyphicon-search'></i> 
Dashboard Tasks</h1>
<hr>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Tags</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= situation(task) %></td>
        <td><%= task.tags %></td>
        <td><%= owner(task) %></td>
        <td><%= link_to 'Show', [:dashboard, task] %></td>
        <% if policy(task).update? %>
        <td><%= link_to 'Edit', edit_dashboard_task_path(task) %></td>
        <% end %>
        <% if policy(task).destroy? %>
        <td><%= link_to 'Destroy', [:dashboard, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination(@tasks) %>


