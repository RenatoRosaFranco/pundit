<ul class='breadcrumb'>
  <li><%= link_to 'Home',  dashboard_path %></li>
  <li><%= link_to 'Profile', dashboard_profile_path %></li>
</ul>

<div class='col-md-8'>

	<ul class='list-unstyled'>
		<li><%= button_to 'Add Task', new_dashboard_task_path,
		 class: 'btn btn-primary btn-lg top pull-right', method: :get %></li>
	    <li><h3><strong><i class='glyphicon glyphicon-search'></i> MY TASKS</strong>
	    <span class='badge'><%= @tasks.count %></span> </h3></li>
	    <li>hi <%= link_to @profile.email %> here is yout task list </li>
	    <li><hr></li>
	</ul>

	<div class='col-md-12 panel panel-default'>
		<table class='table'>
			 <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Tags</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><h4><%= task.id %></h4></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><span class='badge'><%= situation(task) %><span></td>
        <td><%= owner(task) %></td>
        <td><%= link_to 'Show', [:dashboard, task] %></td>
        <% if policy(task).update? %>
        <td><%= link_to 'Edit', edit_dashboard_task_path(task) %></td>
        <% end %>
        <% if policy(task).destroy? %>
        <td><%= link_to 'Destroy', [:dashboard, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 
  <%= pagination(@tasks) %>
</div>

<div class='col-md-4'>
	<div class='field'>
	  <div class='panel panel-default padding text-center'>	
		 <%= image_tag('', class: 'avatar') %>
	  </div> 
	</div>
	<div class='field'>
		<div class='panel panel-default padding'>
			<label>Name: </label>
			<p><%= 'John Doe' %></p>
		</div>
	</div>
    <div class='field'>
	  <div class='panel panel-default padding'>
	  	<label>Role: </label><br>
	  	<span class='badge'><%= @profile.access %></span>
	  </div>
	</div>
	<div class='field'>
	 <div class='panel panel-default padding'>	
		 <strong>E-mail:</strong>
		 <p><%= link_to @profile.email %></p>
	 </div>
	</div>

	<div class='field'>
		<div class='panel panel-default padding'>
			<%= button_to 'Edit Profile', edit_dashboard_profile_path(@profile) , 
			 class: 'btn btn-primary btn-lg top', method: :get %>
		</div>
	</div>
</div>